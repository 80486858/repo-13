{
  "name": "@contentful/microsoft-teams",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "create-app-definition": "contentful-app-scripts create-app-definition",
    "build": "rimraf ./build && npm run build-frontend && npm run build-backend",
    "build-actions": "node build-actions.js",
    "build-backend": "cd backend && npm ci && cd .. && npm run build-actions",
    "build-frontend": "cd frontend && npm ci --include=dev && BUILD_PATH=../build npm run build",
    "deploy": "contentful-app-scripts upload --ci --bundle-dir ./dist --organization-id ${DEFINITIONS_ORG_ID} --definition-id 7lcE2IF8TiXXKiMj2UGM8k --token ${CONTENTFUL_CMA_TOKEN}",
    "deploy:test": "contentful-app-scripts upload --ci --bundle-dir ./dist --organization-id ${DEV_TESTING_ORG_ID} --definition-id 73UaKZLqfCJTTqayKn73Rv --token ${TEST_CMA_TOKEN}"
  },
  "dependencies": {
    "@contentful/app-scripts": "1.13.0",
    "esbuild": "^0.19.2",
    "sharp": "^0.32.5"
  }
}
