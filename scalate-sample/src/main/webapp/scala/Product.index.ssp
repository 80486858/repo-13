<%-- a template to render any Scala Product or case class --%>

<%@ val it : Product %>

<h3>${it.productPrefix}</h3>

<table>
  <tr>
<%
  import org.fusesource.scalate.util.ProductReflector._

  val map = toMap(it)
  for ((key, value) <- map) {
%>
    <td>${key}:</td>
    <td><b><%= value %></b></td>
<% } %>
  </tr>
</table>
